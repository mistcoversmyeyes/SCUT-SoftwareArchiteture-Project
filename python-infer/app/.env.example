# FastAPI配置示例
# 复制此文件为 .env 并根据实际情况修改

# API配置
API_V1_PREFIX=/api/v1
PROJECT_NAME=OCR Multi-Pipeline API
VERSION=1.0.0

# CORS配置（生产环境需要修改为实际前端域名）
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# 文件上传限制
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=["jpg","jpeg","png","bmp"]

# Docker vLLM配置
VLLM_ENDPOINT=http://localhost:8118
VLLM_TIMEOUT=30

# OCR模型配置
USE_GPU=true
SHOW_LOG=false

# 性能监控
ENABLE_METRICS=true
METRICS_EXPORT_DIR=./metrics
